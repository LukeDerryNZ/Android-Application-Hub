<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:padding="0dp"
    android:paddingBottom="0dp"
    tools:context="com.lukederrynz.application_Hub.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/backlight"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:columnCount="3"
        android:columnOrderPreserved="true"
        android:rowCount="3"
        android:useDefaultMargins="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_TTS"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:onClick="startActivityTTS"
            android:text="@string/button_StartTextToSpeech"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_StartWeatherActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="fill"
            android:layout_margin="8dp"

            android:background="@color/colorAccent"
            android:onClick="startActivityWeather"
            android:text="@string/button_StartWeatherActivity"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_StartCalculatorActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="fill"
            android:layout_margin="8dp"

            android:background="@color/colorAccent"
            android:onClick="startActivityCalculator"
            android:text="@string/button_StartCalculator"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"


            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_row="2"

            android:background="@color/colorAccent"
            android:text="@string/button_UNUSED"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_row="2"

            android:background="@color/colorAccent"
            android:text="@string/button_UNUSED"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_row="1"

            android:background="@color/colorAccent"
            android:text="@string/button_UNUSED"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"

            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_row="2"

            android:background="@color/colorAccent"
            android:text="@string/button_UNUSED"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_StartAboutActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_column="1"
            android:layout_gravity="fill"

            android:layout_margin="8dp"
            android:layout_row="1"
            android:background="@drawable/about_icon"
            android:onClick="startActivityAbout"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_column="0"
            android:layout_gravity="fill"

            android:layout_margin="8dp"
            android:layout_row="1"
            android:background="@color/colorAccent"
            android:text="@string/button_UNUSED"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="29dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>

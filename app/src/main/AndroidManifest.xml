<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukederrynz.android_test">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity android:name="com.lukederrynz.application_Hub.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Text To Speech Activity -->
        <activity
            android:name="com.lukederrynz.application_Hub.TextToSpeechActivity"
            android:parentActivityName="com.lukederrynz.application_Hub.MainActivity"></activity>

        <!-- Weather Activity -->
        <activity
            android:name="com.lukederrynz.application_Hub.WeatherActivity"
            android:parentActivityName="com.lukederrynz.application_Hub.MainActivity"></activity>
        <activity android:name="com.lukederrynz.application_Hub.CalculatorActivity"></activity>
    </application>

</manifest>